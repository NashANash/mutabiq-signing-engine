{
  "openapi": "3.0.0",
  "info": {
    "title": "Mutabiq Signing Engine API",
    "version": "1.0.0",
    "description": "API Documentation for Building, Signing, and Validating UBL 2.1 Invoices"
  },
  "paths": {
    "/": {
      "get": {
        "summary": "Health Check",
        "responses": {
          "200": {
            "description": "Returns server health status."
          }
        }
      }
    },
    "/sign_invoice": {
      "post": {
        "summary": "Build + Sign a UBL Invoice",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Returns invoice_xml and signed_xml."
          }
        }
      }
    },
    "/validate_invoice": {
      "post": {
        "summary": "Validate UBL XML",
        "requestBody": {
          "required": true,
          "content": {
            "text/xml": {
              "schema": {
                "type": "string"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Validation result."
          }
        }
      }
    }
  }
}